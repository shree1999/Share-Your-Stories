<h1>Stories</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card card-container">
      <div class="card-image">
        {{{ editIcons user ../user _id }}}
      </div>
      <div class="crad-content center-align">
        <h5>{{ title }}</h5>
        <p>{{ stripTags (truncate body 150) }}</p>
        <br />
        <div class="chip">
          <img src="{{ user.image }}" alt="">
          <a href="/stories/user/{{user._id}}">{{ user.displayName }}</a>
        </div>
      </div>
      <div class="card-section center-align">
        <a href="/stories/{{_id}}" class="btn grey">Read More</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories to display</p>
  {{/each}}
</div>